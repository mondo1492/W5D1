<h2>New Post</h2>

<form action="<%= posts_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="post[subs]" value="">
    <% Sub.all.each do |sub_reddit| %>
      <label>
        <input
          type="checkbox"
          name="post[subs][]"
          value="<%= sub_reddit.id %>"
          <%= "checked" if @post.subs.include?(sub_reddit.id) %>>
        <%= sub_reddit.title %>
      </label>
      <br>
    <% end %>

  <label>Title
    <input type="text" name="post[title]" value="">
  </label>
  <label>URL
    <input type="text" name="post[url]" value="">
  </label>
  <label>Content
    <input type="text" name="post[content]" value="">
  </label>
  <button type="submit" value="submit">Submit</button>
</form>

<%= link_to "Back", sub_url(params[:sub_id]) %>
